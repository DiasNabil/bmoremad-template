# BMAD Template Environment Variables
# Copy this file to .env and update with your actual values

# =================================
# MCP Server Configuration
# =================================

# GitHub MCP Server
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username_or_org

# PostgreSQL MCP Server  
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name

# Redis MCP Server
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Notion MCP Server (Optional)
NOTION_TOKEN=your_notion_integration_token

# Firecrawl MCP Server (Optional)
FIRECRAWL_API_KEY=your_firecrawl_api_key

# =================================
# Project Configuration
# =================================

# Project Information
PROJECT_NAME=your_project_name
PROJECT_DESCRIPTION="Your project description"

# Development Environment
NODE_ENV=development
PORT=3000

# =================================
# Security & Monitoring
# =================================

# JWT Secrets (Generate secure random strings)
JWT_SECRET=your_jwt_secret_256_bit_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_256_bit_key

# Encryption Keys
ENCRYPTION_KEY=your_32_byte_encryption_key

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_url

# =================================
# Instructions
# =================================
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit .env to version control
# 4. Use /BMad/init-prd to start your project initialization