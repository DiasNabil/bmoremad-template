{
  "version": "2.0",
  "enterprise_security_level": "high",
  "last_updated": "2025-09-08T00:00:00Z",
  "permissions_matrix": {
    "bmad-qa": {
      "description": "Test Architect & Quality Advisor - Full audit capabilities",
      "security_clearance": "enterprise-audit",
      "mcp_servers": {
        "github": {
          "permissions": ["read", "write", "admin"],
          "restrictions": {
            "branch_protection": true,
            "audit_trail": "mandatory",
            "security_review": "required"
          },
          "rate_limits": {
            "requests_per_minute": 100,
            "concurrent_connections": 5
          }
        },
        "postgres": {
          "permissions": ["read", "write", "audit"],
          "restrictions": {
            "tables": ["audit_logs", "security_events", "compliance_data"],
            "encryption": "AES-256",
            "backup_access": true
          },
          "queries": {
            "allowed_operations": ["SELECT", "INSERT", "UPDATE"],
            "forbidden_operations": ["DROP", "TRUNCATE", "ALTER"]
          }
        },
        "redis": {
          "permissions": ["read", "write", "monitor"],
          "restrictions": {
            "namespaces": ["audit:*", "security:*", "compliance:*"],
            "ttl_override": false,
            "persistence": "required"
          }
        },
        "filesystem": {
          "permissions": ["read", "write", "execute"],
          "restrictions": {
            "allowed_paths": [
              "/workspace/security/*",
              "/workspace/tests/*",
              "/workspace/audit/*",
              "/workspace/logs/*"
            ],
            "forbidden_paths": [
              "/etc/*",
              "/root/*",
              "/home/*"
            ],
            "file_types": {
              "allowed": [".log", ".json", ".yaml", ".md", ".ts", ".js"],
              "forbidden": [".exe", ".bat", ".sh"]
            }
          }
        },
        "memory": {
          "permissions": ["read", "write", "purge"],
          "restrictions": {
            "retention_policy": "90d",
            "encryption": "enabled",
            "audit_access": true
          }
        }
      },
      "security_capabilities": {
        "audit_logging": true,
        "threat_detection": true,
        "compliance_validation": true,
        "security_testing": true,
        "incident_response": true
      }
    },
    "contains-test-analyzer": {
      "description": "Advanced Test Analysis - Security test coordination",
      "security_clearance": "test-security",
      "mcp_servers": {
        "github": {
          "permissions": ["read", "write"],
          "restrictions": {
            "security_branches": "read-only",
            "test_artifacts": "full-access"
          }
        },
        "postgres": {
          "permissions": ["read", "write"],
          "restrictions": {
            "tables": ["test_results", "security_tests", "vulnerability_scans"]
          }
        },
        "redis": {
          "permissions": ["read", "write"],
          "restrictions": {
            "namespaces": ["test:*", "security-test:*"]
          }
        }
      }
    },
    "bmad-parallel-orchestrator": {
      "description": "Orchestrateur parallèle - Hooks sécurité",
      "security_clearance": "orchestration-security",
      "mcp_servers": {
        "github": {
          "permissions": ["read", "write", "webhook"],
          "restrictions": {
            "security_hooks": "mandatory",
            "parallel_execution": "controlled"
          }
        },
        "postgres": {
          "permissions": ["read", "write"],
          "restrictions": {
            "tables": ["orchestration_logs", "security_hooks", "parallel_state"]
          }
        }
      },
      "security_hooks": {
        "pre_execution": ["security_scan", "permission_check", "resource_validation"],
        "post_execution": ["audit_log", "compliance_check", "cleanup"]
      }
    },
    "contains-eng-devops": {
      "description": "Engineering DevOps - Validation sécurité",
      "security_clearance": "devops-security",
      "mcp_servers": {
        "github": {
          "permissions": ["read", "write", "deploy"],
          "restrictions": {
            "security_pipelines": "required",
            "deployment_gates": "mandatory"
          }
        },
        "filesystem": {
          "permissions": ["read", "write", "execute"],
          "restrictions": {
            "allowed_paths": ["/workspace/infrastructure/*", "/workspace/security/*"],
            "security_validation": "required"
          }
        }
      }
    }
  },
  "security_policies": {
    "authentication": {
      "tls_version": "1.3",
      "certificate_validation": "strict",
      "mutual_tls": true,
      "session_timeout": "30m"
    },
    "authorization": {
      "rbac_enabled": true,
      "permission_inheritance": false,
      "dynamic_permissions": false,
      "audit_all_access": true
    },
    "data_protection": {
      "encryption_at_rest": "AES-256-GCM",
      "encryption_in_transit": "TLS-1.3",
      "key_rotation": "30d",
      "pii_detection": true
    },
    "monitoring": {
      "real_time_alerts": true,
      "anomaly_detection": true,
      "threat_intelligence": true,
      "compliance_reporting": "daily"
    }
  },
  "compliance_frameworks": [
    "SOC2",
    "ISO27001",
    "GDPR",
    "HIPAA",
    "PCI-DSS"
  ]
}